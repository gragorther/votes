generator client {
  provider = "prisma-client-js"
  output   = "prismagenerated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model person {
  id        Int         @id
  name      String
  post_like post_like[]
}

model post {
  id        Int         @id
  ap_id     String
  postLikes post_like[] // Relation field for all likes on this post
}

model post_like {
  post_id   Int      @id
  post      post     @relation(fields: [post_id], references: [id])
  person    person   @relation(fields: [person_id], references: [id])
  score     Int
  published DateTime
  person_id Int
}
